---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FlowField from './FlowField.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

interface Props {
	title?: string;
    description?: string;
    class?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION, class: className = "max-w-2xl" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
        <!-- KaTeX CSS for math rendering (preserved from previous layout) -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-n8MVd4RsNIU0tAv4ct0nTaAbDJwPJzDEaqSD1odI+WdtXRGWt2kTvGFasHpSy3SV" crossorigin="anonymous">
	</head>
	<body class="w-full mx-auto px-4 sm:px-6 lg:px-8 flex flex-col min-h-screen">
        <FlowField />
        <div class="w-full max-w-2xl mx-auto">
            <Header />
        </div>
        <main class={`flex-grow w-full ${className} mx-auto`}>
		    <slot />
        </main>
        <div class="w-full max-w-2xl mx-auto">
            <Footer />
        </div>
		<!-- Cloudflare Web Analytics -->
		<script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "39ca8ee06887442a85f7c5c0083e699d"}'></script>
		<!-- End Cloudflare Web Analytics -->
	</body>
</html>