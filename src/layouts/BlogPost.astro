---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
		<Header />
		<main>
			<article>
				<div class="mb-8">
					<div class="mb-4 text-gray-500 text-sm">
						<FormattedDate date={pubDate} />
						{
							updatedDate && (
								<div class="italic">
									Last updated on <FormattedDate date={updatedDate} />
								</div>
							)
						}
					</div>
					<h1 class="text-3xl sm:text-4xl font-bold text-white mb-4 tracking-tight">{title}</h1>
					<hr class="border-gray-800 my-8" />
				</div>
                
                {/* 
                   prose: sets up typography defaults
                   prose-invert: optimizes for dark mode (light text)
                   prose-a: styles links within the markdown
                   prose-headings: ensures headers are white
                   max-w-none: prevents prose from constraining width (we handle it in body)
                */}
				<div class="prose prose-invert prose-lg max-w-none 
                    prose-a:text-theme-accent prose-a:no-underline hover:prose-a:underline
                    prose-headings:text-white prose-headings:font-bold
                    prose-p:text-gray-300 prose-li:text-gray-300
                    prose-strong:text-white">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>